<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lytech.xvjialing.sensordisplay.ui.RegisterPhoneFragment">

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="手机号"
        android:drawableLeft="@drawable/ic_account"
        android:inputType="phone"
        style="@style/EditText1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        <EditText
            android:id="@+id/et_vertirycode"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="验证码"
            android:drawableLeft="@drawable/ic_vertirycode"
            style="@style/EditText1"/>

        <Button
            android:id="@+id/btn_getvertiry"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="获取"
            android:textColor="@color/white"
            android:background="@drawable/bg_vertirybtn_selector"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/et_signal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="公司权限代码"
        android:drawableLeft="@drawable/ic_signal_code"
        android:layout_marginTop="15dp"
        style="@style/EditText1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="密码（6～12位字母、数字）"
        android:drawableLeft="@drawable/ic_pwd"
        android:layout_marginTop="15dp"
        style="@style/EditText1"
        android:inputType="textPassword"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:background="@drawable/bg_loginbtn_selector"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="没有账户？注册"
        android:textColor="@color/white"
        android:background="@drawable/bg_registerbtn_selector"/>

</LinearLayout>
