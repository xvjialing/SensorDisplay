<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lytech.xvjialing.sensordisplay.ui.RegisterEmailFragment">

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="邮箱"
        android:drawableLeft="@drawable/ic_email"
        style="@style/EditText1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/et_signal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="公司权限代码"
        android:drawableLeft="@drawable/ic_signal_code"
        android:layout_marginTop="15dp"
        style="@style/EditText1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="密码（6～12位字母、数字）"
        android:drawableLeft="@drawable/ic_pwd"
        android:layout_marginTop="15dp"
        style="@style/EditText1"
        android:inputType="textPassword"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/et_pwd_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="确认密码"
        android:drawableLeft="@drawable/ic_pwd"
        android:layout_marginTop="15dp"
        style="@style/EditText1"
        android:inputType="textPassword"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:background="@drawable/bg_loginbtn_selector"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="没有账户？注册"
        android:textColor="@color/white"
        android:background="@drawable/bg_registerbtn_selector"/>

</LinearLayout>
